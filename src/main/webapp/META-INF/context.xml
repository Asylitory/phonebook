<?xml version="1.0" encoding="UTF-8"?>

<Context path="/phonebook">
	<Resource
	 name="jdbc/PhonebookDS"
	 type="javax.sql.DataSource"
	 username="username"
	 password="password"
	 driverClassName="com.mysql.jdbc.Driver"
	 maxIdle="2"
	 maxWait="5000"
	 validationQuery="SELECT 1"
	 url="jdbc:mysql://127.0.0.1:3306/phonebook?useUnicode=true&amp;characterEncoding=Cp1251"
	 useUnicode="yes"
	 characterEncoding="cp1251"
	 charSet="cp1251"
	 maxActive="4">
	</Resource>
</Context>
